#:kivy 2.1.0

BoxLayout:
    orientation: 'vertical'

    ScreenManager:
        id: sm
        MainScreen:
        PomodoroScreen:
        CharacterDetailScreen:

    # 하단 탭바
    BoxLayout:
        size_hint_y: None
        height: '48dp'
        spacing: 5

        Button:
            text: '오늘의 할 일'
            font_name: 'GangwonEdu'
            on_press: sm.current = 'main'

        Button:
            text: '뽀모도로'
            font_name: 'GangwonEdu'
            on_press: sm.current = 'pomodoro'

        Button:
            text: '캐릭터'
            font_name: 'GangwonEdu'
            on_press: sm.current = 'character'


<MainScreen>:
    name: 'main'
    BoxLayout:
        orientation: 'vertical'
        padding: 10
        spacing: 10

        # To-Do 입력 / 추가
        BoxLayout:
            size_hint_y: None
            height: '40dp'
            spacing: 5
            padding: 5

            TextInput:
                id: task_input
                hint_text: '할 일을 입력해'
                font_name: 'GangwonEdu'
                multiline: False
                on_text_validate: app.add_task(self.text)

            Button:
                text: '추가'
                font_name: 'GangwonEdu'
                size_hint_x: None
                width: '80dp'
                on_press: app.add_task(task_input.text)

        # To-Do 리스트
        ScrollView:
            GridLayout:
                id: todo_box
                cols: 1
                size_hint_y: None
                height: self.minimum_height


<PomodoroScreen>:
    name: 'pomodoro'
    BoxLayout:
        orientation: 'vertical'
        padding: 10
        spacing: 10



        Label:
            text: '🍅 뽀모도로 타이머'
            font_name: 'GangwonEdu'
            font_size: '20sp'


<CharacterDetailScreen>:
    name: 'character'
    BoxLayout:
        orientation: 'vertical'
        padding: 10
        spacing: 10



        Label:
            text: '캐릭터 상세 정보'
            font_name: 'GangwonEdu'
            font_size: '20sp'
